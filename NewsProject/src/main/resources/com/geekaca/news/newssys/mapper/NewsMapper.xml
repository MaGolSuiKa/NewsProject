    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
            nw.news_id, nw.news_title, nw.create_time, nc.category_name as news_category_name
        FROM
            tb_news nw,
            tb_news_category nc
        WHERE
            nw.news_category_id = nc.category_id
        ORDER BY nw.create_time DESC;
    </select>
<!--

  1：N查询结果
  新闻 评论
-->
    <select id="selectNewsAndCommentsById" resultMap="NewsMap">
        SELECT
            *
        FROM
            (SELECT
                 nc.*,
                 tnc.commentator,
                 tnc.comment_body,
                 tnc.comment_create_time
             FROM
                 tb_news nc
                     LEFT JOIN tb_news_comment tnc ON nc.news_id = tnc.news_id) nw
        WHERE
            nw.news_id = #{newsId}
        ORDER BY nw.comment_create_time DESC
    </select>
    <select id="selectByPage" resultMap="BaseResultMap">
        SELECT
        nw.news_id, nw.news_title, nw.create_time, nw.news_status,nw.news_views,
        nc.category_name as news_category_name
        FROM
        tb_news nw,
        tb_news_category nc
        WHERE
        nw.news_category_id = nc.category_id
        <if test="keyword != null and keyword != '' ">
            and ( nw.news_title like concat('%', #{keyword}, '%')
            or news_category_name like concat('%', #{keyword}, '%') )
        </if>
        ORDER BY nw.create_time DESC
        limit #{start}, #{recordSize}
    </select>
    <select id="selectNewsCount" resultType="java.lang.Integer">
        SELECT
        count(*)
        FROM
        tb_news nw,
        tb_news_category nc
        WHERE
        nw.news_category_id = nc.category_id
        <if test="keyword != null and keyword != '' ">
            and  ( nw.news_title like concat('%', #{keyword}, '%') or
            nc.category_name like concat('%', #{keyword}, '%') )
        </if>
    </select>
    <select id="getTotalNews" resultType="java.lang.Integer">
