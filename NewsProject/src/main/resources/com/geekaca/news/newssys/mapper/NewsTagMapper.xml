    <select id="selectTagNewsCounts" resultMap="TagNewsMap">
        SELECT
            tag.tag_id, tag.tag_name, count(nw.news_title) as tagCount
        FROM
            tb_news nw,
            tb_news_tag tag,
            tb_news_tag_relation ttr
        WHERE
            nw.news_id = ttr.news_id
          AND ttr.tag_id = tag.tag_id
        group by tag.tag_id
        order by tagCount desc
